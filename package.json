{
  "name": "konstruct",
  "version": "1.0.0",
  "description": "Set of ui elements to use with react",
  "main": "index.js",
  "repository": "git@github.com:traaidmark/konstruct.git",
  "author": "Adrian Kirsten",
  "license": "Apache 2",
  "private": true,
  "workspaces": [
    "packages/**/*"
  ],
  "scripts": {
    "auth": "npm login --registry=https://npm.pkg.github.com --scope=@traaidmark",
    "bootstrap": "lerna bootstrap",
    "start": "start-storybook -p 5555",
    "build": "lerna exec --parallel -- babel --root-mode upward src -d lib --ignore **/*.story.js,**/*.spec.js",
    "test": "jest",
    "test:update": "jest --updateSnapshot",
    "test:coverage": "jest --coverage",
    "lint": "eslint packages/*"
