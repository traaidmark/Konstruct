{
  "name": "konstruct",
  "version": "1.0.0",
  "description": "Set of ui elements to use with react",
  "main": "index.js",
  "repository": "git@github.com:traaidmark/konstruct.git",
  "author": "Adrian Kirsten",
  "license": "Apache 2",
  "private": true,
  "browserslist": "last 2 versions",
  "workspaces": [
    "packages/**/*"
  ],
  "scripts": {
    "auth": "npm login --registry=https://npm.pkg.github.com --scope=@traaidmark",
    "bootstrap": "lerna bootstrap",
    "start": "start-storybook -p 5555",
    "build:js": "lerna exec --parallel -- babel --root-mode upward src -d lib",
    "build:css": "lerna exec --parallel -- postcss src/*.css -d lib",
    "build": "yarn build:css && yarn build:js",
    "storybook:build": "yarn build-storybook",
    "storybook:publish": "./bin/publish-storybook.sh",
    "test": "jest",
    "test:update": "jest --updateSnapshot",
    "test:coverage": "jest --coverage",
    "lint:js": "eslint packages/* --no-error-on-unmatched-pattern",
    "lint:css": "stylelint packages/**/**/"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "@storybook/addon-actions": "^6.0.27",
    "@storybook/addon-controls": "^6.0.27",
    "@storybook/addon-docs": "^6.0.27",
    "@storybook/react": "^6.0.27",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^26.6.1",
    "babel-loader": "^8.1.0",
    "babel-plugin-styled-components": "^1.11.1",
    "chromatic": "^5.3.0",
    "concurrently": "^5.3.0",
    "cssnano": "^4.1.10",
    "eslint": "^7.12.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^26.6.1",
    "jest-css-modules": "^2.1.0",
    "jest-haste-map": "^26.6.1",
    "jest-resolve": "^26.6.1",
    "jest-styled-components": "^7.0.3",
    "lerna": "^3.22.1",
    "postcss": "^8.2.4",
    "postcss-cli": "^8.3.1",
    "postcss-preset-env": "^6.7.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1",
    "react-test-renderer": "^17.0.1",
    "styled-components": "^5.2.0",
    "stylelint": "^13.8.0",
    "stylelint-config-standard": "^20.0.0",
    "ts-dedent": "^2.0.0",
    "webpack": "^5.2.0"
  }
}
